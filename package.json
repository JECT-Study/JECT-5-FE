{
  "name": "ject-5-fe",
  "workspaces": [
    "service/*",
    "shared/*"
  ],
  "version": "0.0.1",
  "packageManager": "yarn@4.9.2",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@typescript-eslint/types": "^8.37.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9",
    "lint-staged": "^16.1.2",
    "playwright": "^1.53.1",
    "prettier": "^3.5",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "typescript": "^5.6",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "commit": "cz",
    "test:all": "yarn workspaces foreach -A run test",
    "lint:all": "yarn workspaces foreach -A run lint",
    "type-check:all": "yarn workspaces foreach -A run type-check",
    "ci": "yarn run test:all && yarn run type-check:all && yarn run lint:all"
  },
  "resolutions": {
    "vite": "^6"
  }
}
